// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  // Optional for WebAuthn support
  Authenticator Authenticator[]
  listings      Listing[]
  reviews       Review[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([userId, credentialID])
}

model Listing {
  id                        String       @id @default(cuid())
  title                     String?
  description               String?
  location                  String?
  city                      String?
  state                     String?
  country                   String?
  country_code              String?
  lat                       Float?
  lng                       Float?
  price                     Int?
  weekendPrice              Int?
  weekendPremium            Int?
  userId                    String
  user                      User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  isGuestFavorite           Boolean      @default(false)
  hostType                  String?
  reviews                   Review[]
  images                    Json?
  createdAt                 DateTime     @default(now())
  updatedAt                 DateTime     @updatedAt
  guestCount                Int          @default(1)
  bedroomCount              Int          @default(0)
  bedCount                  Int          @default(1)
  bathroomCount             Float        @default(0.5)
  amenityIds                String[]
  amenities                 Amenity[]
  categoryId                String?
  category                  Category?    @relation(fields: [categoryId], references: [id])
  step                      String?
  isPublished               Boolean      @default(false)
  isListed                  Boolean      @default(false)
  privacyTypeId             String?
  privacyType               PrivacyType? @relation(fields: [privacyTypeId], references: [id])
  isNewListingDiscount      Boolean      @default(true)
  newListingDiscount        Int?         @default(20)
  isLastMinuteDiscount      Boolean      @default(false)
  isWeeklyDiscount          Boolean      @default(true)
  isMonthlyDiscount         Boolean      @default(true)
  lastMinuteDiscount        Int?         @default(0)
  weeklyDiscount            Int?         @default(12)
  monthlyDiscount           Int?         @default(25)
  isNoiseMonitor            Boolean      @default(false)
  isWeapons                 Boolean      @default(false)
  isSecurityCamera          Boolean      @default(false)
  securityCameraDescription String?
  photos                    Photo[]
}

model Review {
  id        String   @id @default(cuid())
  listingId String
  userId    String
  rating    Int
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  listing   Listing  @relation(fields: [listingId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Amenity {
  id              String    @id @default(cuid())
  name            String    @unique
  description     String?
  icon            String
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  isGuestFavorite Boolean   @default(false)
  isStandOut      Boolean   @default(false)
  isSafety        Boolean   @default(false)
  listings        Listing[]
}

model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  icon      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  listings  Listing[]
  slug      String    @unique
}

model PrivacyType {
  id          String    @id @default(cuid())
  name        String    @unique
  description String?   @db.Text
  createdAt   DateTime  @default(now())
  icon        String
  slug        String    @unique
  updatedAt   DateTime  @updatedAt
  listings    Listing[]
}

model Photo {
  id             String   @id @default(cuid())
  url            String
  isCoverPicture Boolean  @default(false)
  createdAt      DateTime @default(now())
  publicId       String
  signature      String
  order          Int?
  caption        String?
  updatedAt      DateTime @updatedAt
  listingId      String
  listing        Listing  @relation(fields: [listingId], references: [id])

  // 3) Usually worth it: publicId lookups (and often should be unique)
  @@unique([publicId])
  // 1) Fast: get all photos for a listing (and order them consistently)
  @@index([listingId, order])
  @@index([listingId, createdAt])
  // 2) Fast: cover photo lookup per listing
  @@index([listingId, isCoverPicture])
  // Optional: if you verify signatures or use them in secure image flows
  @@index([publicId, signature])
}
